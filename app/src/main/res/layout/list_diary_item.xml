<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="12dp"
              android:background="@color/item_background"
              android:clickable="true"
              android:focusable="true"
              android:foreground="?android:attr/selectableItemBackground"
              android:orientation="vertical"
              android:padding="@dimen/activity_horizontal_margin">
    <TextView
        android:id="@+id/diaryDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="2015-09-04"
        tools:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="13dp"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:id="@+id/diary_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:textSize="14sp"
                tools:text="DanteId"/>
            <TextView
                android:id="@+id/notebookSubject"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_below="@+id/userName"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:textColor="@color/secondText"
                android:textSize="14sp"
                tools:text="《This is diary title》"/>
            <TextView
                android:id="@+id/commentsCount"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/time"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:drawablePadding="3dp"
                android:drawableRight="@drawable/ic_comment_black_18dp"
                android:gravity="center"
                android:textColor="@color/tertiaryText"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="2"
                tools:visibility="visible"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/userName"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textColor="@color/tertiaryText"
                android:textSize="12sp"
                tools:text="20分钟前"/>

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notebookSubject"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.3"
                android:maxHeight="128dp"
                android:maxLines="5"
                android:textColor="@color/secondText"
                tools:text="@string/test_diary"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/content"
                android:layout_below="@+id/content">

                <ImageView
                    android:id="@+id/attachPicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:adjustViewBounds="true"
                    android:maxHeight="180dp"
                    android:maxWidth="140dp"
                    android:visibility="gone"
                    tools:src="@mipmap/ic_launcher"
                    tools:visibility="visible"/>
                <TextView
                    android:id="@+id/isGif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:background="@color/btg_global_text_blue"
                    android:padding="3dp"
                    android:text="GIF"
                    android:textColor="@color/white" android:visibility="gone"/>
            </FrameLayout>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
