<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_collapseMode="parallax"
    tools:showIn="@layout/fragment_profile">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left|center"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:minHeight="56dp"
        android:minWidth="56dp"
        app:layout_collapseMode="parallax"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/followState"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/created"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:minHeight="34dp"
        android:textColor="@color/white"
        android:visibility="invisible"
        tools:text="已关注"
        tools:visibility="visible"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/avatar"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@+id/avatar"
        android:visibility="gone"
        tools:text="已关注"/>

    <TextView
        android:id="@+id/created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar"
        tools:text="2010-03-17 加入"/>

    <TextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="54dp"
        android:layout_toRightOf="@+id/created"
        android:ellipsize="end"
        android:gravity="end"
        android:lineSpacingMultiplier="1.3"
        android:maxLines="4"
        android:textColor="@color/whiteFont"
        android:textSize="16sp"
        tools:text="我是一个离开了家门啊啊啊啊啊啊啊啊啊啊没有工作的人啊
        啊啊啊啊啊啊啊啊啊啊啊漫无目
        的的四处飘荡啊啊啊啊啊啊啊啊寻找奇迹的人啊啊啊啊啊啊啊啊
        我也渴望着一种幸福啊啊啊啊啊
        名字叫作婚姻
        我也渴望着一种温馨
        名字叫作爱人

        我的家里还有个母亲
        她时时为我担心
        为了她我还有一点怕死
        不敢让她伤心"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/avatar"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@+id/avatar"
        android:gravity="center_vertical"
        android:minHeight="80dp"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:text="Followers"/>
        <TextView
            android:id="@+id/following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            tools:text="following"/>
    </LinearLayout>


</RelativeLayout>

            