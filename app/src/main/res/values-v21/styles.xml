<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ViewerTheme.TransNav.Placeholder">
        <item name="android:windowBackground">@drawable/holder_logo</item>
    </style>

    <style name="AppTheme.NoActionBar.Default">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>
    <style name="ViewerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--<item name="android:colorBackgroundCacheHint">@null</item>-->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
    </style>
    <style name="ViewerTheme.TransNav">
        <item name="android:windowTranslucentNavigation">true</item>

    </style>

    <style name="Translucent" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>