<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.dante.diary"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".base.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".main.MainActivity"
            android:alwaysRetainTaskState="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".base.BottomBarActivity"/>
        <activity
            android:name=".detail.ViewerActivity"
            android:theme="@style/ViewerTheme.TransNav"/>
        <activity
            android:name=".detail.DiariesViewerActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".create.CreateNotebookActivity"
                  android:windowSoftInputMode="stateVisible|adjustPan"/>
        <activity android:name=".TransitionActivity">
        </activity>
        <activity android:name=".custom.PickPictureActivity">
        </activity>
        <activity
            android:name=".create.CreateDiaryActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateVisible|adjustPan">
        </activity>
    </application>

</manifest>